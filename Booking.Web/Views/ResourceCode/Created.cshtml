@using Booking.DataModel.Master.ResourceCode
@model ResourceCodeDTO

@{
    ViewData["Title"] = "New Resource Code";
}

<form method="post" action="Created" class="upsert-form">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <input type="hidden" asp-for="ResourceId" />
    <table>
        <tbody>
            <tr>
                <td>Resource Code</td>
                <td>
                    <input asp-for="ResourceCode" />
                    <span asp-validation-for="ResourceCode"></span>
                </td>
            </tr>
            <tr>
                <td class="textarea-label">Status</td>
                <td>
                    <label>
                        <input type="checkbox" name="Status" asp-for="Status" value="true">
                    </label>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button" type="submit">Submit</button>
    <a class="blue-button update-button" asp-action="Created" asp-controller="Resource" asp-route-id="@Model.ResourceId">Back</a>
</form>