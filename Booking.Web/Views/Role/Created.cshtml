@using Booking.DataModel.Master.Role
@model CreatedRoleDTO

@{
    ViewData["Title"] = "New Role";
}

<form method="post" action="Created" class="upsert-form">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <table>
        <tbody>
            <tr>
                <td>Name</td>
                <td>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button" type="submit">Submit</button>
    <a class="blue-button update-button" asp-action="Index" asp-controller="Role">Back</a>
</form>